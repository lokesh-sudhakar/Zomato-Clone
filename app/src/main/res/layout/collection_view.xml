<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/red_banner"
        />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:paddingLeft="5dp"
                android:layout_marginTop="120dp"
                android:orientation="vertical">
            <TextView
                android:id="@+id/collection_tittle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Trending This Week"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_22sp"
                android:textStyle="bold"
                />
                <TextView
                    android:id="@+id/collection_description"
                    android:layout_width="350"
                    android:layout_height="wrap_content"
                    android:text="Most popular restaurants in town this week"
                    android:textColor="@color/colorPrimary"
                    android:maxLines="2"
                    android:textSize="15sp"
                    />
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:text="30 PLACES"
                        android:textSize="15dp"
                        android:textColor="@color/colorPrimary"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_arrow_pointing_right_in_a_circle"
                        />
                </LinearLayout>
            </LinearLayout>
</FrameLayout>