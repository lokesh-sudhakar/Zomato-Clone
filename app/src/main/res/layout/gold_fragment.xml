            android:paddingBottom="20dp"
            />
            <TextView
                android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/faq_one"
                android:paddingLeft="@dimen/margin_10dp"
                android:paddingRight="@dimen/margin_10dp"
                android:textSize="14sp"
                android:textColor="@color/dark_black"
                android:text="Is Zomato Gold valid on deliveries or takeaway?"
                android:drawableRight="@drawable/ic_keyboard_arrow_down_grey_24dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ans_one"
                android:paddingLeft="@dimen/margin_10dp"
                android:paddingRight="@dimen/margin_10dp"
                android:textSize="12sp"
                android:paddingBottom="@dimen/margin_10dp"
                android:visibility="gone"
                android:text="No, Zomato Gold is valid only for dining out at our partner restaurants and bars."/>
